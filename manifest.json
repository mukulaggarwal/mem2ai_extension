{
  "manifest_version": 3,
  "name": "PromptRefiner",
  "version": "1.0.0",
  "description": "Refine your prompts on any LLM site with one click.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://*.perplexity.ai/*",
    "https://grok.com/*",
    "https://*.deepseek.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "PromptRefiner"
  },
  "options_page": "options/index.html",
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["src/contentScript.js"],
      "css": ["styles/button.css"],
      "run_at": "document_idle"
    }
  ]
}